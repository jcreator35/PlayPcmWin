<Window x:Class="ColorPlot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="1024" Width="1024" Background="#FFC1C1C1" Loaded="Window_Loaded">
    <Grid>
        <Canvas Height="800" Name="canvas1" VerticalAlignment="Top" Background="#FF484848" HorizontalAlignment="Left" Width="800" Margin="35,24,0,0">
            <Rectangle Canvas.Left="0" Canvas.Top="0" Height="1" Name="rectangleH" Stroke="#FFC4C4C4" Width="800" />
            <Rectangle Canvas.Left="0" Canvas.Top="0" Height="800" Name="rectangleV" Stroke="#FFC4C4C4" Width="1" />
            <Label Content="a*" Name="labelAxisA"  Foreground="White" FontSize="24" Canvas.Left="0" Canvas.Top="0" />
            <Label Content="b*" Name="labelAxisB" Foreground="White" FontSize="24" Canvas.Left="0" Canvas.Top="0" />
            <Label Content="0" Name="labelOrigin" Foreground="White" FontSize="24" Canvas.Left="0" Canvas.Top="0" />
        </Canvas>
    </Grid>
</Window>
