<Window x:Class="BezierTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BezierTest" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="33" />
            <ColumnDefinition Width="33" />
            <ColumnDefinition Width="33" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="33" />
        </Grid.ColumnDefinitions>
        <Canvas Name="canvas1" Grid.Column="3" />
        <Slider Name="slider1" Orientation="Vertical" Grid.Column="0" Minimum="-1" Maximum="1" ValueChanged="slider1_ValueChanged" />
        <Slider Name="slider2" Orientation="Vertical" Grid.Column="1" Minimum="-1" Maximum="1" ValueChanged="slider2_ValueChanged" />
        <Slider Name="slider3" Orientation="Vertical" Grid.Column="2" Minimum="-1" Maximum="1" ValueChanged="slider3_ValueChanged" />
    </Grid>
</Window>
