<Window x:Class="WWWaveSimulatorCS.ChooseGPUWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choose GPU" Height="246" Width="358">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="175*" />
            <RowDefinition Height="32" />
        </Grid.RowDefinitions>
        <ListBox Name="listBoxAdapters" SelectionChanged="listBoxAdapters_SelectionChanged" />
        <Button Content="_Select Adapter" Grid.Row="1" Name="button1" VerticalAlignment="Center" Margin="80,0,80,0" Click="button1_Click" />
    </Grid>
</Window>
