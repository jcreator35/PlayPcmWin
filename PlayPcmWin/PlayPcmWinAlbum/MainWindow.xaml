<Window x:Class="PlayPcmWinAlbum.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PlayPcmWinAlbum" Height="600" Width="1024"
        xmlns:local="clr-namespace:PlayPcmWinAlbum" Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid VerticalAlignment="Bottom" HorizontalAlignment="Center">
        <ScrollViewer CanContentScroll="True" PanningMode="VerticalOnly" >
            <local:VerticalScrollTilePanel x:Name="tilePanel">
            </local:VerticalScrollTilePanel>
        </ScrollViewer>
        <TextBlock Name="textBlockMessage" Text="textBlockMessage" Panel.ZIndex="1" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <ProgressBar Height="24" Name="progressBar" VerticalAlignment="Bottom" Maximum="1000000" />
    </Grid>
</Window>
