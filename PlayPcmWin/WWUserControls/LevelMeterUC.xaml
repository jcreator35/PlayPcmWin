            </Grid>
        </GroupBox>
        <GroupBox Header="Other Settings"  Margin="277,6,6,6" Name="groupBoxLevelMeterOther">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
