<Window x:Class="WWSpatialAudioPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WWSpatialAudioPlayer"
        mc:Ignorable="d"
        Title="WWSpatialAudioPlayer" Height="600" Width="1024" Closed="Window_Closed" >
    <Grid Name="mGridWholeContainer" >
        <Grid Name="mGridMainContainer" Visibility="Visible">
            <Grid Margin="6,0,6,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="90"/>
                    <RowDefinition Height="180*"/>
                    <RowDefinition Height="50*"/>
                    <RowDefinition Height="120*"/>
                    <RowDefinition Height="20" />
                </Grid.RowDefinitions>
                <GroupBox Header="Audio File input" >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Label Content="Input _File name" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        <TextBox IsReadOnly="True" x:Name="mTextBoxInputFileName" TextWrapping="Wrap" Text="C:/audio/multichannel.flac" VerticalAlignment="Center" Grid.Column="1" Margin="0,0,0,0" />
                        <Button x:Name="mButtonBrowse" Content="_Browse..." Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" Width="100" Margin="6,0,0,0" Click="ButtonBrowse_Click"/>
                        <Button x:Name="mButtonRead" Content="_Read" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Width="100" Margin="-60,0,0,0" Click="ButtonRead_Click"/>
                    </Grid>
                </GroupBox>
                <Grid Grid.Row="1" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <GroupBox Header="Playback Device" >
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="30" />
                            </Grid.RowDefinitions>
                            <ListBox x:Name="mListBoxPlaybackDevices" />
                            <Button x:Name="mButtonUpdatePlaybackDeviceList" Grid.Row="1" Width="100" Content="_Update" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="4,0,0,0" Click="MButtonUpdatePlaybackDeviceList_Click"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Virtual speaker settings" Grid.Column="1" >
                        <DataGrid 
                            Name="dataGridVirtualSpeakerSettings"
                            GridLinesVisibility="None"
                            AutoGenerateColumns="False"
                            CanUserSortColumns="False"
                            CanUserReorderColumns="False"
                            CanUserResizeColumns="True"
                            CanUserAddRows="False"
                            CanUserResizeRows="False"
                            SelectionUnit="FullRow"
                            SelectionChanged="dataGridVirtualSpeakerSettings_SelectionChanged"
                            IsReadOnly="False"
                            Background="{x:Null}" IsEnabled="True">

                            <DataGrid.RowHeaderStyle>
                                <Style TargetType="{x:Type DataGridRowHeader}">
                                    <Setter Property="Content" Value="{Binding Channel}"/>
                                </Style>
                            </DataGrid.RowHeaderStyle>

                            <DataGrid.Columns>
                                <DataGridTextColumn x:Name="dataGridColumnChannel" Width="Auto" Binding="{Binding ChannelName}" Header="Sound Source Channel Name" IsReadOnly="True" />
                                <DataGridTextColumn x:Name="dataGridColumnSPX" Width="Auto" Binding="{Binding PosX}" Header="Position X"/>
                                <DataGridTextColumn x:Name="dataGridColumnSPY" Width="Auto" Binding="{Binding PosY}" Header="Position Y"/>
                                <DataGridTextColumn x:Name="dataGridColumnSPZ" Width="Auto" Binding="{Binding PosZ}" Header="Position Z"/>
                            </DataGrid.Columns>

                        </DataGrid>
                    </GroupBox>
                </Grid>
                <GroupBox Header="Playback controls" Grid.Row="2" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" Grid.Row="0" >
                            <Button x:Name="mButtonPlay" Content="_Play" VerticalAlignment="Center" Width="100" Margin="6,0,0,0" IsEnabled="False" Click="ButtonPlay_Click"/>
                            <Button x:Name="mButtonStop" Content="_Stop" VerticalAlignment="Center" Width="100" Margin="6,0,0,0" IsEnabled="False" Click="ButtonStop_Click"/>
                            <Label Content="00:00:00 / 00:00:00" Margin="6,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>
                <GroupBox Header="Log" Grid.Row="3" >
                    <TextBox x:Name="mTextBoxLog" Text="Show logs here" AcceptsTab="True" AcceptsReturn="True" ScrollViewer.CanContentScroll="True" IsReadOnly="True" />
                </GroupBox>
                <ProgressBar x:Name="mProgressbar" Grid.Row="4" />

            </Grid>
        </Grid>
    </Grid>
</Window>
