<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72sp">

    <ImageView
        android:id="@+id/list_item_image_view_album_cover_art"
        android:layout_width="68sp"
        android:layout_height="68sp"
        android:layout_marginStart="2dp"
        android:contentDescription="@string/desc_album_cover_art"
        android:src="@android:drawable/ic_menu_gallery"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_item_text_view_album_name"
        android:layout_width="0dp"
        android:layout_height="16sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4sp"
        android:ellipsize="end"
        android:text="Album name. very lengthy album name for testing."
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/list_item_image_view_album_cover_art"
        app:layout_constraintEnd_toStartOf="@+id/list_item_text_view_duration"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_item_text_view_duration"
        android:layout_width="50sp"
        android:layout_height="16sp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4sp"
        android:ellipsize="end"
        android:text="00:00"
        android:textAlignment="viewEnd"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/list_item_text_view_album_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_item_text_view_artist_name"
        android:layout_width="0dp"
        android:layout_height="16sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2sp"
        android:ellipsize="end"
        android:text="Artist name. very long artist name"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/list_item_text_view_sample_format"
        app:layout_constraintStart_toEndOf="@+id/list_item_image_view_album_cover_art"
        app:layout_constraintTop_toBottomOf="@+id/list_item_text_view_album_name" />

    <TextView
        android:id="@+id/list_item_text_view_sample_format"
        android:layout_width="120sp"
        android:layout_height="16sp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2sp"
        android:ellipsize="end"
        android:text="44.1kHz 16bit PCM"
        android:textAlignment="viewEnd"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/list_item_text_view_artist_name"
        app:layout_constraintTop_toBottomOf="@+id/list_item_text_view_album_name" />

    <TextView
        android:id="@+id/list_item_text_view_title_name"
        android:layout_width="0dp"
        android:layout_height="18sp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2sp"
        android:layout_marginBottom="2sp"
        android:ellipsize="end"
        android:text="Title name. very long title with accompanying info such as composer, recording date, score revision etc."
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/list_item_image_view_album_cover_art"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_item_text_view_artist_name"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
